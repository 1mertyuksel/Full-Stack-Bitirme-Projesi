@model List<ForumPost>

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "FORUM";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Forum.css">
}

<script type="text/javascript" src="~/js/Forum.js"></script>

<div class="container">
    <div class="mb-5">
         <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                <option selected>Ligi seç</option>
                <option value="1">Premier Lig</option>
                <option value="2">La Liga</option>
                <option value="3">Serie A</option>
                <option value="3">Ligue 1</option>
                <option value="3">Süper Lig</option>
                <option value="3">Serie A</option>
            </select>
    
            <select class="form-select form-select-sm" aria-label=".form-select-sm example">
                <option selected>Takım</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
    </div>



    <div class="mb-3">
        <label for="name" class="form-label">AD SOYAD</label>
        <input type="text" class="form-control" id="name">
    </div>

    <div class="mb-3">
        <label for="comment" class="form-label">Yorum</label>
        <textarea class="form-control" id="comment" rows="3"></textarea>
    </div>

    <button type="button" class="btn btn-primary" onclick="submitContent()">Gönder</button>
</div>

<!-- Yorumları göstermek için liste -->
<div class="Yorumlar">
    <h2>Yorumlar</h2>
    <div id="commentList">
        @if (Model != null)
{
    foreach (var post in Model)
    {
        <div class="comment">
            <p><strong>@post.Name</strong></p>
            <p>@post.Comment</p>
            <small>@post.CreatedAt</small>
        </div>
    }
}
else
{
    <p>No posts available.</p>
}
    </div>
</div>
